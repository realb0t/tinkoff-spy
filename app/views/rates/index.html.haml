.container.hero-unit
  #alertWin.modal.hide.fade{ tabindex: -1, role: :dialog, 'ia-hidden': true}
    .modal-header
      .button.close{ type: :button, 'data-dismiss': :modal, 'aria-hidden': true } ×
      %h3 Создание Оповещения
    .modal-body
      .form-inline
        %select.input-medium
          %option{ value: :USD } USD/RUB
          %option{ value: :EUR } EUR/RUB
        %select.input-small
          %option{ value: :more } Больше
          %option{ value: :less } Меньше
        %input.input-small{ type: :text, placeholder: 1.0, required: :required}
        %input.input-medium{ type: :email, placeholder: 'mail@example.com', required: :required}
    .modal-footer
      %button.btn{ 'data-dismiss': :modal, 'aria-hidden': true } Отмена
      %button#save-alert-btn.btn.btn-primary Сохранить
  .span12.text-center.action-buttons
    = link_to '/', class: "btn btn-large refresh-btn" do
      %i.icon-refresh
      Обновить
    %a.btn.btn-large.create-alert-btn{ href: '#' }
      %i.icon-volume-up
      Оповещение
  .span12.text-center
    %h2 
      USD/RUB
      %i.icon-arrow-up
    .row-fluid
      .span6
        %h3 Спред
        .row-fluid
          .span6
            %h4 Абсолютный
            %h3 1.1
          .span6
            %h4 Относительный
            %h3 1.1%
      .span6
        %h3 Ставка
        .row-fluid
          .span6
            %h4 Текущая
            %h3 1.1
          .span6
            %h4 Средняя за день
            %h3 1.1
  .span12.text-center
    %h2 
      EUR/RUB
      %i.icon-arrow-down
    .row-fluid
      .span6
        %h3 Спред
        .row-fluid
          .span6
            %h4 Абсолютный
            %h3 1.1
          .span6
            %h4 Относительный
            %h3 1.1%
      .span6
        %h3 Ставка
        .row-fluid
          .span6
            %h4 Текущая
            %h3 1.1
          .span6
            %h4 Средняя за день
